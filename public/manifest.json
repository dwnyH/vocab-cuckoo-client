{
  "manifest_version": 2,

  "name": "vocab-cuckoo",
  "description": "vocabulary reminder chrome extension",
  "version": "1.0",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "icons/birdIcon-16.png",
    "48": "icons/birdIcon-48.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "storage"
  ]
}